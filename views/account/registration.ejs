<div class="account-form">
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>

    <form action="/account/registration" method="post" class="registration-form">
        <div class="form-group">
            <label for="account_firstname">First Name</label>
            <input 
                type="text"
                name="account_firstname"
                id="account_firstname"
                required
                value="<%= locals.account_firstname %>"
                >
        </div>

        <div class="form-group">
            <label for="account_lastname">Last Name</label>
            <input 
                type="text"
                name="account_lastname"
                id="account_lastname"
                required
                value="<%= locals.account_lastname %>"
                >
        </div>

        <div class="form-group">
            <label for="account_email">Email</label>
            <input 
                type="email"
                name="account_email"
                id="account_email"
                required
                value="<%= locals.account_email %>"
                >
        </div>

        <div class="form-group">
            <label for="account_password">Password</label>
            <input 
                type="password"
                name="account_password"
                id="account_password"
                required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                >
                <div class="show-password-container">
                    <input type="checkbox" id="showPassword">
                    <label for="showPassword">Show Password</label>
                </div>
        </div>
        <div class="pass-requirements">
            <span>Passwords must be 12 characters in length and contain at least 1 capital letter, number, and special character.</span>
        </div>

        <div class="form-actions">
            <button type="submit">Register</button>
        </div>
    </form>

</div>
