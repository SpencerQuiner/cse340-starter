<div class="account-management">
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>

    <div class="account-form">
        <form action="/account/update" method="post" class="accountUpdateForm">
            <input type="hidden" name="account_id" value="<%= account_id %>">
            <h3>Update Account Information</h3>
            <div class="form-group">
                <label for="account_firstname">First Name</label>
                <input 
                    type="text"
                    name="account_firstname"
                    id="account_firstname"
                    required
                    value="<%= account_firstname %>"
                    >
            </div>

            <div class="form-group">
                <label for="account_lastname">Last Name</label>
                <input 
                    type="text"
                    name="account_lastname"
                    id="account_lastname"
                    required
                    value="<%= account_lastname %>"
                    >
            </div>

            <div class="form-group">
                <label for="account_email">Email</label>
                <input 
                    type="email"
                    name="account_email"
                    id="account_email"
                    required
                    value="<%= account_email %>"
                    >
            </div>

            <div class="form-actions">
                <button type="submit">Update</button>
            </div>
        </form>
    </div>

    <div class="account-form">
        <form action="/account/update-password" method="post" class="changePasswordForm">
            <input type="hidden" name="account_id" value="<%= account_id %>">
            <h3>Change Password</h3>
            <div class="form-group">
                <label for="account_password">New Password</label>
                <input 
                    type="password"
                    name="account_password"
                    id="account_password"
                    required
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                    >
                    <div class="show-password-container">
                        <input type="checkbox" id="showPassword">
                        <label for="showPassword">Show Password</label>
                    </div>
            </div>
            <div class="pass-requirements">
                <span>Passwords must be 12 characters in length and contain at least 1 capital letter, number, and special character.</span>
            </div>

            <div class="form-actions">
                <button type="submit">Change Password</button>
            </div>
        </form>
    </div>

</div>
