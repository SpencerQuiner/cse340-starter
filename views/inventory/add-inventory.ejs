<div class="management-form form-centered">
    <h1><%= title %></h1>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form id="addInventory" action="/inv/add-inventory" method="post" class="addInventory">
        <div class="form-group">
            <label for="inv_make">Make</label>
            <input 
                type="text"
                name="inv_make"
                id="inv_make"
                required
                pattern="^[A-Za-z0-9\s\-\_]+$"
                value="<%= inv_make ? inv_make : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_model">Model</label>
            <input 
                type="text"
                name="inv_model"
                id="inv_model"
                required
                pattern="^[A-Za-z0-9\s\-]+$"
                value="<%= inv_model ? inv_model : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_year">Year</label>
            <input 
                type="number"
                name="inv_year"
                id="inv_year"
                required
                min="1900" 
                max="2030"
                value="<%= inv_year ? inv_year : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_description">Description</label>
            <input 
                type="text"
                name="inv_description"
                id="inv_description"
                required
                value="<%= inv_description ? inv_description : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_image">Image</label>
            <input 
                type="text"
                name="inv_image"
                id="inv_image"
                required
                pattern="^\/images\/vehicles\/[A-Za-z0-9_\-]+\.(jpg|jpeg|png|gif)$"
                value="<%= inv_image ? inv_image : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_thumbnail">Thumbnail Image</label>
            <input 
                type="text"
                name="inv_thumbnail"
                id="inv_thumbnail"
                required
                pattern="^\/images\/vehicles\/[A-Za-z0-9_\-]+\.(jpg|jpeg|png|gif)$"
                value="<%= inv_thumbnail ? inv_thumbnail : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_price">Price</label>
            <input 
                type="number"
                name="inv_price"
                id="inv_price"
                required
                step="0.01" 
                min="0"
                value="<%= inv_price ? inv_price : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_miles">Miles</label>
            <input 
                type="number"
                name="inv_miles"
                id="inv_miles"
                required
                min="0"
                value="<%= inv_miles ? inv_miles : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="inv_color">Color</label>
            <input 
                type="text"
                name="inv_color"
                id="inv_color"
                required
                pattern="^[A-Za-z\s\-\']+$"
                value="<%= inv_color ? inv_color : '' %>"
                >
        </div>

        <div class="form-group">
            <label for="classificationList">Classification</label>
            <%- classificationList %>
        </div>

        <div class="form-actions">
            <button type="submit">Add Inventory Item</button>
        </div>
    </form>
</div>